{
  // EDITOR
  "editor.formatOnSave": true,
  "editor.lineHeight": 25,
  "editor.minimap.enabled": false,
  "editor.fontSize": 13,
  "editor.fontLigatures": false,
  "editor.fontFamily": " 'Jetbrains Mono', Consolas, 'Courier New', monospace ",
  "editor.wordWrap": "on",

  // TERMINAL
  "terminal.integrated.fontSize": 14,

  // WORKBENCH
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    // editor
    "editor.background": "#171717",
    "editorLineNumber.activeForeground": "#35d7dd",

    // selection highlight
    "editor.selectionBackground": "#366ea350",
    "editor.lineHighlightBackground": "#63636331",

    // tab atas
    "tab.activeBackground": "#171717",
    "tab.hoverBackground": "#171717",
    "tab.hoverForeground": "#ffff",

    // Bar kiri
    "activityBarBadge.background": "#16d8df9c",

    // terminal bawah
    "terminal.background": "#18181a"
  },
  "java.configuration.updateBuildConfiguration": "automatic"
}
